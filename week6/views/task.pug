doctype html
html(lang="en")
head
  title= "Task Details"
  link(rel="stylesheet" href="/styles.css")
body
  h1 You are viewing task #{id} using a template
  ul
    li The title of the task is #{title}
    if completed
      li The task is completed
    else
      li The task is not completed
    li The date of the task is #{date}

